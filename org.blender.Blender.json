                }
            ],
            "cleanup": [
                "*"
            ]
        },
        {
            "name": "x264",
            "config-opts": [
                "--enable-shared",
                "--disable-cli"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "http://ftp.videolan.org/pub/x264/snapshots/x264-snapshot-20180407-2245-stable.tar.bz2",
                    "sha256": "86ea8ecb515f1a6e67df4bba37345ea908a0ea7da587d4f74f8afb6c33642f2b"
                },
