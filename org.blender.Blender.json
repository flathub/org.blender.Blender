            "builddir": true,
            "build-options": {
                "cxxflags": "-DOPENVDB_3_ABI_COMPATIBLE"
            },
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.blender.org/source/blender-2.79b.tar.gz",
                    "sha256": "4c944c304a49e68ac687ea06f5758204def049b66dc211e1cffa1857716393bc"
                },
                {
                    "type": "file",
                    "path": "org.blender.Blender.appdata.xml"
