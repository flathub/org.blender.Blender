        {
            "name": "certifi",
            "buildsystem": "simple",
            "build-commands": [
                "/usr/bin/pip3 --disable-pip-version-check install --prefix=/app --no-deps --verbose ."
            ],
            "sources": [
                {
                    "type": "archive",
